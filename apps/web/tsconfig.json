{
  "include": [
    "node_modules/vite-plugin-svg-icons-ssr/client.d.ts", // TODO: I'm sure there's a better way to do this
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"]
    },

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
